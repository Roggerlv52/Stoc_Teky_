<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyApplication.CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:background">@drawable/custom_edit_text</item>

        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="Theme.MyApplication.FormEditTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="Theme.MyApplication.FormEdit_Text" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/custom_edit_text</item>
    </style>

    <style name="Theme.MyApplication.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="Theme.MyApplication.TextViewBase">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>


</resources>