<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyApplication.CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:background">@drawable/custom_edit_text</item>

        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="Theme.MyApplication.FormEditTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="Theme.MyApplication.FormEdit_Text" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/custom_edit_text</item>
    </style>

    <style name="Theme.MyApplication.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="Theme.MyApplication.TextViewBase">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="NavigationViewStyle">
        <item name="itemHorizontalPadding">20dp</item>
        <item name="itemIconPadding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:dividerHeight">2dp</item>
    </style>
    <style name="Theme.MyApplication.CardViewCustom">
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="CardViewCustom_TexteView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginStart">2dp</item>
       <!-- <item name="layout_constraintLeft_toLeftOf">parent</item> -->
    </style>

    <style name="CardViewCustom_ImageView">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:contentDescription">@string/todo</item>
        <item name="android:src">@drawable/ic_edit_24</item>
    </style>
    <!-- Base. -->
    <style name="Theme.MyApplication.Toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/orange</item>
        <!-- Customize your theme here.
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>-->
    </style>



</resources>